@model MLP.Models.Course

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="page-section">
    <div class="row">
        <div class="col-md-10 col-lg-8 col-md-offset-1 col-lg-offset-2">
            <h4 class="page-section-heading">Add Course</h4>
            <div class="panel panel-default">
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        
                         
                            @Html.ValidationSummary(true)
                  
                                <div class="form-group form-control-material">

                                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @placeholder = "Course Title" })
                                    @Html.LabelFor(model => model.Title)
                                    @Html.ValidationMessageFor(model => model.Title)

                                </div>
                   
               
                                <div class="form-group form-control-material">

                                    @Html.TextBoxFor(model => model.Duration, new { @class = "form-control", @placeholder = "Course Duration" })
                                    @Html.LabelFor(model => model.Duration)
                                    @Html.ValidationMessageFor(model => model.Duration)

                                </div>
               

                                <div class="form-group form-control-material">

                                    @Html.TextBoxFor(model => model.OutComes, new { @class = "form-control", @placeholder = "Course OutComes" })
                                    @Html.LabelFor(model => model.OutComes)
                                    @Html.ValidationMessageFor(model => model.OutComes)

                                </div>
                
                          
                                <div class="form-group form-control-material">

                                    @Html.TextBoxFor(model => model.CreditHours, new { @class = "form-control", @placeholder = "Course Credit Hours" })
                                    @Html.LabelFor(model => model.CreditHours)
                                    @Html.ValidationMessageFor(model => model.CreditHours)

                                </div>
                               <div class="form-group form-control-material">

                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @placeholder = "Course Description" })
                                @Html.LabelFor(model => model.Description)
                                @Html.ValidationMessageFor(model => model.Description)

                             </div>
                        
                                    <input type="submit" value="Create" class="btn btn-primary" />
                            
                    }

                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
